<Window x:Class="SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:statusbar="clr-namespace:Westwind.Wpf.Statusbar;assembly=Westwind.Wpf.Statusbar"
        Title="MainWindow" Height="400" Width="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height ="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Width="200" Margin="20">
            <Button Name="btnSuccess" Click="BtnSuccess_OnClick" Margin="0 10">Success</Button>
            <Button Name="btnError" Click="BtnError_OnClick" Margin="0 10">Error</Button>
            <Button Name="btnWarning" Click="BtnWarning_OnClick" Margin="0 10">Warning</Button>
            <Button Name="btnProgress" Click="BtnProgress_OnClick" Margin="0 10">Progress</Button>
            <Button Name="btnRaw" Click="BtnRaw_OnClick" Margin="0 10">Direct ShowStatus</Button>
            <Button Name="btnUpdatePanels" Click="BtnUpdatePanels_OnClick" Margin="0 10">Update Panels</Button>
        </StackPanel>


        <statusbar:StatusbarControl Grid.Row="1" Name="Statusbar" />
    </Grid>
</Window>
